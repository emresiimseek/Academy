                <th scope="col">Öğrenci</th>
                <th scope="col">Oluşturma Tarihi</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody class="custombodyreport">

            @foreach (AttendanceReport attendanceReport in Model)
            {
                <tr id="@attendanceReport.AttendanceDetailId">
                    <td>@attendanceReport.AttendanceDetailId</td>
                    <td>@attendanceReport.CourseId</td>
                    <td>@attendanceReport.CourseName</td>
                    <td>@attendanceReport.StudentFullName</td>
                    <td class="date">@attendanceReport.CreatedOn</td>
                    <td style="text-align:center;">

                        <button class="btn btn-danger" onclick="deleteFromAttendance('@attendanceReport.AttendanceDetailId')">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>




                    </td>
                </tr>


            }

        </tbody>
    </table>


