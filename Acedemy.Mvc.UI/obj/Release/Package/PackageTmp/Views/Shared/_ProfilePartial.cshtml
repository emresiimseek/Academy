@model InstructorDto
<!-- Large modal -->





<div class="modal fade" id="profile" tabindex="-1" role="form" aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <div id="pp" class="circular--portrait">
                    <img src="~/Content/Images/profile_photo.jpg" alt="Alternate Text" class="im" />
                </div>
            </div>
            <div class="modal-body">
                <div id="val">

                </div>
                <div class="row" id="row">
                    <div style="display:inline-block" class="col-sm-4" id="labels">
                        @Html.LabelFor(x => x.FirstName, new { @class = "mar-label" })<br />
                        @Html.LabelFor(x => x.LastName, new { @class = "mar-label" })<br />
                        @Html.LabelFor(x => x.UserName, new { @class = "mar-label" })<br />
                        @Html.LabelFor(x => x.Password, new { @class = "mar-label" })<br />
                    </div>
                    <div id="userd" class="col-sm-8">
                        @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control mar", @id = "fn" })
                        @Html.TextBoxFor(x => x.Id, new { @class = "form-control mar", @id = "id",@style="display:none" })
                        @Html.TextBoxFor(x => x.LastName, new { @class = "form-control mar", @id = "ln" })
                        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control mar", @id = "un" })
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control mar", @id = "ps", required = "required", type = "password" })

                    </div>



                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                <button id="save" type="submit" class="btn btn-primary edit_data">Kaydet</button>
            </div>

        </div>

    </div>
    </div>
